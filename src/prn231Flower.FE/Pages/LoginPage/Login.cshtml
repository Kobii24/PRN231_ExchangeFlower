@page "/Login"
@model prn231Flower.FE.Pages.LoginPage.LoginModel

@{
    ViewData["Title"] = "Login Page";
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f3f4f6;
            margin: 0;
        }

        .center-wrapper {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 100%;
            max-width: 400px;
            padding: 2em;
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        h3 {
            font-size: 1.8em;
            color: #333;
            margin-bottom: 1em;
        }

        table {
            width: 100%;
            margin-top: 1em;
        }

        td {
            padding: 0.5em 0;
            text-align: left;
        }

        input[type="text"], input[type="password"] {
            width: 100%;
            padding: 0.5em;
            margin: 0.2em 0;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }

        input[type="submit"], .btn-secondary {
            width: 100%;
            padding: 0.6em;
            font-size: 1em;
            color: #fff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        input[type="submit"] {
            background-color: #4a90e2;
        }

        .btn-secondary {
            background-color: #a3a3a3;
            margin-top: 0.5em;
            text-decoration: none;
            display: inline-block;
            text-align: center;
        }

            .btn-secondary:hover, input[type="submit"]:hover {
                opacity: 0.9;
            }

        .error-message {
            color: #ff4d4d;
            margin-bottom: 1em;
        }
    </style>
</head>
<body>
    <div class="center-wrapper">
        <h3>Sign In</h3>
        @if (Model.ErrorMessage != null)
        {
            <div class="error-message">@Model.ErrorMessage</div>
        }
        <form method="post" asp-page="SignIn">
            <table>
                <tr>
                    <td>UserEmail</td>
                    <td><input asp-for="Email" /></td>
                </tr>
                <tr>
                    <td>Password</td>
                    <td><input type="password" asp-for="Password" /></td>
                </tr>
                <tr>
                    <td colspan="2">
                        <input class="btn btn-primary" type="submit" value="Login" />
                        <a class="btn btn-secondary" asp-page="/SignUpPage/SignUp">Sign up</a>
                    </td>
                </tr>
            </table>
        </form>
    </div>
</body>
</html>
